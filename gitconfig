[alias]
  st      = status
  lg      = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
  lgg      = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'
  co      = checkout
  s       = switch
  ca      = commit -S -am
  cm      = commit -S -m
  au      = add -u
  A       = add -A
  amend   = commit -S --amend --date=now --reuse-message HEAD
  puf     = "!git push --force-with-lease=\"$(git rev-parse --abbrev-ref HEAD)\""
  pu      = "!git push -u origin \"$(git rev-parse --abbrev-ref HEAD)\""
  br      = "branch"
  bd      = "branch -d"
  bD      = "branch -D"
  dc      = "diff --cached"
  default-branch = "!f() { if $(git rev-parse --verify master > /dev/null 2>&1); then echo master; else echo main; fi }; f"
  fixup = "!git commit --fixup $(git log --oneline -v $(git rev-parse --abbrev-ref HEAD) ^origin/$(git default-branch) | fzf | cut -d' ' -f1)"
  rf = "!git rebase -i HEAD~$(git log --oneline -v $(git rev-parse --abbrev-ref HEAD) ^origin/$(git default-branch) | wc -l) --autosquash"
  fr     = "!git fetch origin $(git rev-parse --abbrev-ref HEAD) && git rebase"
  fmr = "!f() { \
      current_branch=$(git branch --show-current); \
      git switch main && \
      git fr && \
      git switch \"$current_branch\" && \
      git rebase main; \
  }; f"
  prune-branches = \\!git fetch --prune && git branch -vv | grep \": gone]\" | awk \"{print \\$1}\" | xargs git branch -D
